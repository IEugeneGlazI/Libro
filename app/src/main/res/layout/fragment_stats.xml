<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray_background">

    <!-- Заголовок ПОВЕРХ ScrollView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:paddingBottom="40dp">

        <!-- ВАШ СУЩЕСТВУЮЩИЙ КОД БЕЗ ЗАГОЛОВКА -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_gray_background">

            <!-- Карточки статистики -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false"
                android:columnOrderPreserved="false">

                <!-- Всего книг -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardElevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_stat1"
                            app:tint="@color/purple_500" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/totalBooksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Всего книг"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Прочитано -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardElevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle2">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_stat2"
                            app:tint="#00a63e"
                            android:layout_gravity="center" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/readBooksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Прочитано"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- В процессе -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardElevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle3">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_stat3"
                            app:tint="@color/purple_500"
                            android:layout_gravity="center"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/readingBooksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="В процессе"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Отложено -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardElevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle4">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_stat3"
                                app:tint="#d08700"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/postponedBooksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Отложено"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- В планах -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="3dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle5">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_stat3"
                                app:tint="#717182"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/plannedBooksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="В планах"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Шкафов -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardElevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_stat_circle6">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_stat6"
                                app:tint="@color/purple_500"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/shelvesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Шкафов"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Прогресс чтения -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Заголовок -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Прогресс чтения"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <!-- Круговой график -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp">

                        <!-- Центральный текст прогресса -->
                        <FrameLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center">

                            <!-- Круговой прогресс -->
                            <com.example.libro.ui.stats.CircularProgressView
                                android:id="@+id/progressCircle"
                                android:layout_width="200dp"
                                android:layout_height="200dp" />

                            <!-- Процент в центре круга -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/progressText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50% завершено"
                                    android:layout_marginTop="55dp"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:padding="8dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </FrameLayout>

                        <!-- Легенда -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_green"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/legendRead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Прочитано: 0"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_purple"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/legendReading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Читаю: 0"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_yellow"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/legendPostponed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Отложено: 0"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_gray"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/legendPlanned"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="В планах: 0"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточки среднего рейтинга и книг на шкаф -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- Средний рейтинг -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:padding="16dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <!-- Звезда слева -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:layout_marginEnd="12dp" />

                        <!-- Текст справа -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Первая строка: рейтинг и надпись в одну линию -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/averageRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Средний рейтинг"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <!-- Вторая строка: оценено книг -->
                            <TextView
                                android:id="@+id/ratedBooksCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Оценено книг: 0"
                                android:textSize="11sp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Книг на шкаф -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:padding="16dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <!-- Иконка слева -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_stats"
                            app:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <!-- Текст справа -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Первая строка: число и надпись в одну линию -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/booksPerShelf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Книг на шкаф"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <!-- Вторая строка: в среднем -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="В среднем"
                                android:textSize="11sp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Топ жанров -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="Топ жанров"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/genresList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Распределение по шкафам -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="Распределение по шкафам"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/shelvesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>