<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_gray">

    <!-- Заголовок ПОВЕРХ ScrollView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Профиль"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/colorBackground"
        android:scrollbars="none"
        android:paddingBottom="40dp">

        <!-- ВАШ СУЩЕСТВУЮЩИЙ КОД БЕЗ ЗАГОЛОВКА -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_gray">

        <!-- Карточка профиля -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="false">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_my_profile" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/profileName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Пользователь"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <ImageButton
                                android:id="@+id/editProfileButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_edit"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Редактировать профиль" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/profileSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Личный аккаунт"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Количество книг и шкафов на сером фоне -->
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:paddingTop="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/books_count_background"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/booksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Книг"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/books_count_background"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/shelvesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Шкафов"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Блок настроек -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/background_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_top"
                    android:padding="12dp"
                    android:text="Настройки"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Тёмная тема с иконкой солнца - Кнопка -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonDarkTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_middle"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iconDarkTheme"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sun"
                        android:contentDescription="Тема"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textDarkTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Тёмная тема"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switchDarkTheme"
                        app:layout_constraintStart_toEndOf="@+id/iconDarkTheme"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                        android:id="@+id/switchDarkTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Уведомления с иконкой колокольчика - Кнопка -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_middle"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp" >

                    <ImageView
                        android:id="@+id/iconNotifications"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Уведомления"
                        android:src="@drawable/ic_bell"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textNotifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Уведомления"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switchNotifications"
                        app:layout_constraintStart_toEndOf="@+id/iconNotifications"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Язык с иконкой глобуса - Кнопка -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp" >

                    <ImageView
                        android:id="@+id/iconLanguage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Язык"
                        android:src="@drawable/ic_globe"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Язык"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textLanguageValue"
                        app:layout_constraintStart_toEndOf="@+id/iconLanguage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textLanguageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Русский"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Блок управления данными -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_top"
                    android:padding="12dp"
                    android:text="Управление данными"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Экспорт данных -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_middle"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconExport"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_upload"
                        android:contentDescription="Экспорт"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textExport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Экспорт данных"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/arrowExport"
                        app:layout_constraintStart_toEndOf="@+id/iconExport"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/arrowExport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Экспорт"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Импорт данных -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonImportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconImport"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_download"
                        android:contentDescription="Импорт"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textImport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Импорт данных"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/arrowImport"
                        app:layout_constraintStart_toEndOf="@+id/iconImport"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/arrowImport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Импорт"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Блок информации -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_top"
                    android:padding="12dp"
                    android:text="Информация"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- О приложении -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_middle"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconAbout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_information"
                        android:contentDescription="О приложении"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textAbout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="О приложении"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textLeftAbout"
                        app:layout_constraintStart_toEndOf="@+id/iconAbout"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textLeftAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Политика конфиденциальности -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_middle"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconPrivacy"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shield"
                        android:contentDescription="Политика конфиденциальности"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textPrivacy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Политика конфиденциальности"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/arrowPrivacy"
                        app:layout_constraintStart_toEndOf="@+id/iconPrivacy"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/arrowPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Политика конфиденциальности"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Связаться с нами -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_item_background_bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconContactUs"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_envelope"
                        android:contentDescription="Cвязаться с нами"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textContactUs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Связаться с нами"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/arrowContactUs"
                        app:layout_constraintStart_toEndOf="@+id/iconContactUs"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/arrowContactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Политика конфиденциальности"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

                <!-- Блок управления данными -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_gray">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/settings_delete_item_bacground_top"
                            android:padding="12dp"
                            android:text="Опасная зона"
                            android:textColor="@color/danger_red"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Удаление данных -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/buttonDeleteAllData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/settings_delete_item_bacground_bottom"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/iconDeleteAllData"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_trash"
                                android:contentDescription="Удалить все данные"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textDeleteAllData"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Удалить все данные"
                                android:textColor="@color/danger_red"
                                android:textSize="16sp"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/arrowDeleteAllData"
                                app:layout_constraintStart_toEndOf="@+id/iconDeleteAllData"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageButton
                                android:id="@+id/arrowDeleteAllData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_delete_arrow"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Экспорт"
                                app:layout_constraintBottom_toBottomOf="parent"
