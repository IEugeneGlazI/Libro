<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:background="@color/background_gray">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray">

        <!-- Иконка шкафа (большая, над названием) -->
        <ImageView
            android:id="@+id/iconShelf"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_books"
            android:contentDescription="Иконка шкафа" />

        <!-- Троеточие (опции) в правом верхнем углу -->
        <ImageButton
            android:id="@+id/btn_shelf_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Опции" />

        <!-- Счетчик книг слева от троеточия -->
        <TextView
            android:id="@+id/textShelfBooksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_shelf_options"
            android:layout_alignTop="@id/btn_shelf_options"
            android:layout_alignBottom="@id/btn_shelf_options"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="1 книга"
            android:textSize="12sp"
            android:textStyle="normal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/books_count_background"
            android:textColor="@color/black" />

        <!-- Название шкафа (под иконкой) -->
        <TextView
            android:id="@+id/textShelfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconShelf"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/textShelfBooksCount"
            android:text="Шкаф у окна"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Контейнер для иконки маркера и расположения -->
        <LinearLayout
            android:id="@+id/locationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textShelfName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Иконка маркера -->
            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_location_marker"
                android:contentDescription="Расположение" />

            <!-- Расположение -->
            <TextView
                android:id="@+id/textShelfLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гостиная"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/textShelfDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationContainer"
            android:layout_marginTop="4dp"
            android:text="Коллекция художественной литературы"
            android:textSize="14sp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>